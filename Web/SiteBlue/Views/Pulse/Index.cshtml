@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/MainLayout.cshtml";
}
@section Title{
    <img src="@Url.Content("~/Content/images/new/pulse-header.png")" alt="" />
}
@section Comments{
    <div id="comments">
        “ConnectusPro gives real time visibility of every aspect of the business, which
        equals great control. “ <span class="comment-by">N.K.</span>
    </div>
}
<div id="transition">
    <a href="@Url.Content("~/Contact")">
        <img src="@Url.Content("~/Content/images/new/small-pulseimage1.png")" id="image1" alt="" height="430" /></a>
    <a href="@Url.Content("~/Contact")">
        <img src="@Url.Content("~/Content/images/new/small-pulseimage2.png")" id="image2" alt="" height="430" /></a>
    <a href="@Url.Content("~/Contact")">
        <img src="@Url.Content("~/Content/images/new/small-pulseimage3.png")" id="image3" alt="" height="430" /></a>
</div>
<script type="text/javascript">

    var height = screen.height;

    if (height > 800) {
        $("#image1").attr("src", '@Url.Content("~/Content/images/new/pulseimage1.png")');
        $("#image1").attr("height", 630);

        $("#image2").attr("src", '@Url.Content("~/Content/images/new/pulseimage2.png")');
        $("#image2").attr("height", 630);

        $("#image3").attr("src", '@Url.Content("~/Content/images/new/pulseimage3.png")');
        $("#image3").attr("height", 630);

        $("#transition").css("height", 630);
        $("#main").css("height", 655);
    } else {
        $("#transition").css("height", 430);
        $("#main").css("height", 455);
    }
    $(document).ready(function () {
        $("#transition")
        .after('<div id="selector">')
        .cycle({
            fx: "fade",
            timeout: 14000,
            speed: 2000,
            pager: '#selector'
        });
    });
</script>
@section scripts{
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.cycle.all.2.74.js")"></script>
}