@model List<SiteBlue.Questionnaire.Data.OfficePersonnel>

    @if ((Model != null) && (Model.Count > 0))
    {
        <table cellpadding="0" cellspacing="0" class="data-table">
            <thead>
                <tr>
                    <th class="actions edit">
                        Edit
                    </th>
                    <th class="actions delete">
                        Delete
                    </th>
                    <th>
                        Name
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Cell Phone
                    </th>
                    <th>
                        Office Phone
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="actions edit">
                            @Ajax.ImageActionLink("../../../Content/images/edit.png", "OfficePersonnelsTable", new { id = item.OfficePersonnelId }, new AjaxOptions { UpdateTargetId = "officePersonnelForm", OnBegin = "beginOfficePersonnel(ds" + item.OfficePersonnelId + ")" }, new { itemid = item.OfficePersonnelId, id = "ds" + item.OfficePersonnelId })
                        </td>
                        <td class="actions delete">
                            @Ajax.ImageActionLink("../../../Content/images/delete.png", "DeleteOfficePersonnel", new { id = item.OfficePersonnelId }, new AjaxOptions { Confirm = "Delete office personnel?", HttpMethod = "Delete", UpdateTargetId = "zoneOfficePersonnels", OnComplete = "deleteOfficePersonnel" }, null)
                        </td>
                        <th style="width:100px">
                            @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
                        </th>
                        <td style="width: 300px">
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td style="width: 80px">
                            @Html.DisplayFor(modelItem => item.CellPhone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OfficePhone)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table cellpadding="0" cellspacing="0" class="data-table">
            <tbody>
                <tr>
                    <td colspan="4" style="height: 40px; width: 900px; vertical-align: middle">
                        <span class="notification">No row returned</span>
                    </td>
                </tr>
            </tbody>
        </table>
    }