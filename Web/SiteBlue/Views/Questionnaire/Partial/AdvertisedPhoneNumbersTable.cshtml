@model List<SiteBlue.Questionnaire.Data.AdvertisedPhoneNumber>
@if ((Model != null) && (Model.Count > 0))
{
    <table class="data-table" cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th class="actions edit">
                    Edit
                </th>
                <th class="actions delete">
                    Delete
                </th>
                <th>
                    Advertised phone N°
                </th>
                <th>
                    Comment
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="actions edit">
                            @Ajax.ImageActionLink("../../../Content/images/edit.png", "AdverisedPhoneNumbersTable", new { id = item.AdvertisedPhoneNumberId }, new AjaxOptions { UpdateTargetId = "advertisedPhoneForm", OnBegin = "beginAdvertisedPhone(ad" + item.AdvertisedPhoneNumberId + ")" }, new { itemid = item.AdvertisedPhoneNumberId, id = "ad" + item.AdvertisedPhoneNumberId })
                        </td>
                        <td class="actions delete">
                            @Ajax.ImageActionLink("../../../Content/images/delete.png", "DeleteAdvertisedPhoneNumber", new { id = item.AdvertisedPhoneNumberId }, new AjaxOptions { Confirm = "Delete advertised phone number?", HttpMethod = "Delete", UpdateTargetId = "zoneAdvertisedPhoneNumbers", OnComplete = "deleteAdvertisedPhone" }, null)
                        </td>
                    <th>
                        @Html.Encode(item.AdvertisedPhone)
                    </th>
                    <td class="comment">
                        @Html.Encode(item.Comment)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <table cellpadding="0" cellspacing="0" class="data-table">
        <tbody>
            <tr>
                <td colspan="4" style="height: 40px; width: 900px; vertical-align: middle">
                    <span class="notification">No row returned</span>
                </td>
            </tr>
        </tbody>
    </table>
}