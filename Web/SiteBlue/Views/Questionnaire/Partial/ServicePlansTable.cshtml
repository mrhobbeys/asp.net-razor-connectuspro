@model List<SiteBlue.Questionnaire.Data.ServicePlan>

    @if ((Model != null) && (Model.Count > 0))
    {
        <table cellpadding="0" cellspacing="0" class="data-table">
            <thead>
                <tr>
                    <th class="actions edit">
                        Edit
                    </th>
                    <th class="actions delete">
                        Delete
                    </th>
                    <th>
                        Name of Service Plan
                    </th>
                    <th>
                        Comment
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="actions edit">
                            @Ajax.ImageActionLink("../../../Content/images/edit.png", "ServicePlansTable", new { id = item.ServicePlanId }, new AjaxOptions { UpdateTargetId = "servicePlanForm", OnBegin = "beginServicePlan(sp" + item.ServicePlanId + ")" }, new { itemid = item.ServicePlanId, id = "sp" + item.ServicePlanId })
                        </td>
                        <td class="actions delete">
                            @Ajax.ImageActionLink("../../../Content/images/delete.png", "DeleteServicePlan", new { id = item.ServicePlanId }, new AjaxOptions { Confirm = "Delete service plan?", HttpMethod = "Delete", UpdateTargetId = "zoneServicePlans", OnComplete = "deleteServicePlan" }, null)
                        </td>
                        <th>
                            @Html.Encode(item.ServicePlanName)
                        </th>
                        <td class="comment">
                            @Html.Encode(item.Comment)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <table cellpadding="0" cellspacing="0" class="data-table">
            <tbody>
                <tr>
                    <td colspan="4" style="height: 40px; width: 900px; vertical-align: middle">
                        <span class="notification">No row returned</span>
                    </td>
                </tr>
            </tbody>
        </table>
    }