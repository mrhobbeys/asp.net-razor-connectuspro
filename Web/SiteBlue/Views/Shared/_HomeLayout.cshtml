<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/base/style.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/layout.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cufon-yui.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/cufon-replace.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Swis721_LtCn_BT_400.font.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Swis721_Md_BT_400.font.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Swis721_Th_BT_400.font.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Vetren_400.font.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.cycle.all.2.74.js")" type="text/javascript"></script>
    <style type="text/css">
        #slideshow
        {
            position: relative;
            width: 430px;
            margin: 35px;
        }
        #controls
        {
            z-index: 1000;
            position: absolute;
            top: 520px;
            left: 0;
            display: none;
            background-color: #ffffff;
            border: 0px solid #ddd;
            margin: 0;
            padding: 6px;
            width: 960px;
            zoom: 1;
            filter: alpha(opacity=70);
            opacity: 0.7;
        }
        #tagLine
        {
            z-index: 1000;
            position: absolute;
            top: 330px;
            left: 20px;
            background-color: transparent;
            border: 0px solid #ddd;
            margin: 0;
            padding: 6px;
            width: 418px;
            font: 35px/1.2em Arial, Helvetica, sans-serif;
            text-align: left;
        }
        #controls span
        {
            margin: 0 5px;
        }
    </style>
    <script type="text/javascript">        $(document).ready(function () {
            $(".header-pic").cycle({
                fx: "turnRight", // choose your transition type, ex: fade, scrollUp, shuffle, etc…
                speed: 4000,
                timeout: 8000,
                next: '#next',
                prev: '#prev'
            });
            $('#pause').click(function () { $('.header-pic').cycle('pause'); return false; });
            $('#play').click(function () { $('.header-pic').cycle('resume'); return false; });
            $('#spic1').click(function () { $('.header-pic').cycle(0); return false; });
            $('#spic2').click(function () { $('.header-pic').cycle(1); return false; });
            $('#spic3').click(function () { $('.header-pic').cycle(2); return false; });
            $('#spic4').click(function () { $('.header-pic').cycle(3); return false; });
            $('#spic5').click(function () { $('.header-pic').cycle(4); return false; });
            $('.header-pic').hover(
        function () { $('#controls').fadeIn(); },
        function () { $('#controls').fadeOut(); }
    );
            $('#controls').hover(
        function () { $('#controls').fadeIn(1); },
        function () { $('#controls').fadeOut(1); }
    );
        });
    </script>
    <!--[if lt IE 9]><script src="@Url.Content("~/Scripts/ie9.js")" type="text/javascript"></script><![endif]-->
    <!--[if lt IE 7]><link href="@Url.Content("~/Content/themes/base/ie_style.css")" rel="stylesheet" type="text/css" /><![endif]-->
</head>
<body id="page1">
    <div class="footer-border">
        <div id="main">
            <!-- header -->
            @Html.Partial("_header")
            <!-- content -->
            @RenderBody()
            <!-- footer -->
            @Html.Partial("_footer")
        </div>
    </div>
</body>
</html>
