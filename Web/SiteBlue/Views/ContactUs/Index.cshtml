    <!--[if lt IE 9]><script src="@Url.Content("~/Scripts/ie9.js")" type="text/javascript"></script><![endif]-->
    <!--[if lt IE 7]><link href="@Url.Content("~/Content/themes/base/ie_style.css")" rel="stylesheet" type="text/css" /><![endif]-->
    <script type="text/javascript">


        function validationEntry(input, validator) {
            if (!$(input).val()) {
                $(validator).show();
                $(input).addClass("input-validation-error");
                return false;
            } else {
                $(validator).hide();
                $(input).addClass("input-validation-valid");
                return true;
            }
        }
        function validationFields(input, validator) {
            
                if (!$("#EmailAddress").val() && !$("#Phone").val()
                    && !$("#CellPhone").val()) {
                    disableEntry("#EmailAddress", "#validateEmailAddress");
                    disableEntry("#Phone", "#validatePhone");
                    disableEntry("#CellPhone", "#validateCellPhone");
                    return false;
                } else {
                    enableEntry("#EmailAddress", "#validateEmailAddress");
                    enableEntry("#Phone", "#validatePhone");
                    enableEntry("#CellPhone", "#validateCellPhone");
                }
        }

        function enableEntry(input, validator) {
            $(validator).hide();
            $(input).removeClass("input-validation-error");
        }

        function disableEntry(input, validator) {
            $(validator).show();
            $(input).addClass("input-validation-error");
        }

        $(document).ready(function () {

            var returnedValue;
            returnedValue = true;

            var returnedValue;
            returnedValue = true;

            $("#validateName").hide();
            $("#validateEmailAddress").hide();
            $("#validatePhone").hide();
            $("#validateCellPhone").hide();

            $("#Name").focusout(function () {
                validationEntry("#Name", "#validateName");
            });

            $("#EmailAddress").focusout(function () {
                validationFields("#EmailAddress", "#validateEmailAddress");
            });

            $("#Phone").focusout(function () {
                validationFields("#Phone", "#validatePhone");
            });

            $("#CellPhone").focusout(function () {
                validationFields("#CellPhone", "#validateCellPhone");
            });

            $("#clear").click(function () {
                $(":text").val("");
                $("#Message").val("");
                $(".validation-summary-errors").hide();
                $(":text").removeClass("input-validation-error");
                $("div.validation-summary-errors").hide();
                $("span.field-validation-error").hide();
            });

            $("#submit").click(function () {
                returnedValue = true;
                if (!$("#Name").val()) {
                    returnedValue = false;
                    disableEntry("#Name", "#validateName");
                } else enableEntry("#Name", "#validateName");

                if (!$("#EmailAddress").val() && !$("#Phone").val()
                    && !$("#CellPhone").val()) {
                    validationFields("#EmailAddress", "#validateEmailAddress");
                    validationFields("#Phone", "#validatePhone");
                    validationFields("#CellPhone", "#validateCellPhone");
                    returnedValue = false;
                }
                return returnedValue;
            });
        });
    
    </script>
</head>
<body id="contactus">
    <div class="footer-border">
        <div id="main">
            <!-- header -->
            <header>
                <h1>
                    @Html.ActionLink(".", "Index", "Home")</h1>
                <nav>
                    <ul>
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About Us", "Index", "Testimonials")</li>
                        <li>@Html.ActionLink("Plumbing", "Index", "Plumbing")</li>
                        <li>@Html.ActionLink("HVAC", "Index", "HvacDescription")</li>
                        <li>@Html.ActionLink("Electrical", "Index", "Electrical")</li>
                        <li class="active">@Html.ActionLink("Contact Us", "Index", "ContactUs")</li>
                    </ul>
                </nav>
            </header><div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            <!-- content -->
            <section class="wrapper">
                <h2>
                    Contact ConnectusPro</h2>
                <p>
                    <strong class="yellow">Are you ready for ConnectusPro to transform your business? Just
                        fill out the information below and one of our business development consultants will
                        contact you shortly with all the details on how you can become a ConnectusPro Business
                        Partner.</strong></p>
                @using (Html.BeginForm("Index", "ContactUs", FormMethod.Post, new { id = "form1" }))
                {
                    @*@Html.ValidationSummary(true, "An error has occured, please correct the errors and try again.")*@
                    <ol class="validation-ol">
                        <li><span class="field-validation-error" id="validateName">You did not enter a Name.</span></li>
                        <li><span class="field-validation-error" id="validateEmailAddress">You did not enter
                            a Email Address.</span></li>
                        <li>@Html.ValidationMessageFor(m => m.EmailAddress)</li>
                        <li><span class="field-validation-error" id="validatePhone">You did not enter a Phone
                            number.</span></li>
                        <li><span class="field-validation-error" id="validateCellPhone">You did not enter a
                            Cell Phone number.</span></li>
                    </ol>
                    <fieldset class="left">
                        <legend></legend>
                        @Html.LabelFor(m => m.Name)
                        @Html.TextBoxFor(m => m.Name)
                        @Html.LabelFor(m => m.EmailAddress)
                        @Html.TextBoxFor(m => m.EmailAddress)
                        @Html.LabelFor(m => m.Phone)
                        @Html.TextBoxFor(m => m.Phone)
                        @Html.LabelFor(m => m.CellPhone)
                        @Html.TextBoxFor(m => m.CellPhone)
                        @Html.LabelFor(m => m.State)
                        @Html.TextBoxFor(m => m.State)
                    </fieldset>
                    <fieldset class="right">
                        <legend></legend>
                        @Html.LabelFor(m => m.Message)
                        @Html.TextAreaFor(m => m.Message)
                        <label class="btns">
                            <a href="javascript:document.getElementById('form1').reset()" class="button" id="clear">
                                Clear</a><a href="javascript:document.getElementById('form1').submit()" class="button"
                                    id="submit">Submit</a>
                        </label>
                    </fieldset>
                }
                <br class="clear" />
                <p>
                </p>
                <p>
                    <strong class="yellow">You can also call us right now at 281-492-3045 to speak to a
                        representative about how we can help make you a better business today!</strong></p>
            </section>
            <!-- footer -->
            @Html.Partial("_footer")
        </div>
    </div>
</body>
</html>
