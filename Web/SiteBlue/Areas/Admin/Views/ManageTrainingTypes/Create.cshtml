@model SiteBlue.Data.EightHundred.TrainingType

@{
    Layout = "~/Views/Shared/_LandingLayout.cshtml";
}

<h2>Create</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<form action="@Url.Content("~/Admin/ManageTrainingTypes/Create")" method="post" enctype="multipart/form-data">
    <fieldset>
        @*<legend>TrainingType</legend>*@

        <div class="editor-label" style="padding-top: 5px">
            <label for="TrainingTypeName">Training type</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.TrainingTypeName, new { @class = "formtext" })
            @Html.ValidationMessageFor(model => model.TrainingTypeName)
        </div>

        <div class="editor-label" style="padding-top: 5px">
            <label for="Description">Description</label>
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Description, new { @class = "formtextarea" })
            @Html.ValidationMessageFor(model => model.Description)
        </div>

        <div class="editor-label" style="padding-top: 5px">
            <label for="Icon">Icon URL (width: 20px)</label>
        </div>
        <div class="editor-field">
            <input type="file" id="file" name="file" class="formtext" />
            @Html.ValidationMessageFor(model => model.Icon)
        </div>

        <div class="editor-label" style="padding-top: 5px">
            <label for="ViewText">Link text</label>
        </div>
        <div class="editor-field">
            @Html.TextBoxFor(model => model.ViewText, new { @class = "formtext" })
            @Html.ValidationMessageFor(model => model.ViewText)
        </div>

        <div class="editor-field" style="padding-top: 5px">
            @Html.EditorFor(model => model.IsActive) <label for="IsActive">Active</label>
            @Html.ValidationMessageFor(model => model.IsActive)
        </div>
        <p>
            <input type="submit" value="Save" class="savebutton" />
        </p>
    </fieldset>
</form>

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

