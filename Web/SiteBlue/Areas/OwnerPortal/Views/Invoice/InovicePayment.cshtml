                                   @Html.TextBox("Date", "", new {@disabled = "disabled" })
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @* <label style="width: 30px">
                                Payment Type</label>*@
                                <div style="width: 20%; float: left">
                                    @Html.Label("Payment Type")</div>
                                <div style="width: 80%; float: left">
