<script type="text/javascript" language="javascript">
    function AddContactNumber(Eid) {


        var employeeId = Eid;
        phTypeId = document.getElementById("txtPhoneType").value;
        var PhNumber = document.getElementById("txtPhoneNumber").value;
        var empid = { Employeeid: employeeId, PhoneTypeID: phTypeId, PhoneNumber: PhNumber };
        var jsondata = $.ajax({
            url: "/Employee/AddContactNumber",
            data: JSON.stringify(empid),
            contentType: "application/json; charset=utf-8",
            success: function (msg) {
                
                window.opener.location.reload();
                // then close this pop-up window
                window.close();
            },
            type: "POST",
            dataType: "json",
            error: function (e) {
                $('#output').innerHtml(e);

            }
        });


    }

</script>

