                <table style="width:98%;" >
                    <tr>
                        <td style="width:110px;">Date</td>
                        <td style="width:160px;">Payment Type</td>
                        <td style="width:110px;">Drivers Lic. #</td>
                        <td style="width:110px;">Check #/Ref #</td>
                        <td style="width:110px;">Amount</td>
