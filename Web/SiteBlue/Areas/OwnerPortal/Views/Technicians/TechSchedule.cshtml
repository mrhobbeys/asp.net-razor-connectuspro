@{
    ViewBag.Title = "Technicians Schedule";
    Layout = "~/Areas/OwnerPortal/Views/Shared/_SecurityGuardLayoutPage.cshtml";
}

   
<script type="text/javascript">
    var companycode = "@ViewBag.code"

    $('document').ready(function () {

        if (companycode != null && companycode != "") {
            $.post('@Url.Action("schedule")',
                { code: companycode }, function (data) {
                    $("#target").html(data);                  
                });
        }
        $('#test1 > li > a').click(function (index) {
            var companycode = $(this).text();

            $.post('@Url.Action("schedule")',
                { code: companycode }, function (data) {
                    $("#target").html(data);
                    $('#current > a').text(companycode);
                    $('li a')[1].click();                    
                });


        });

        $('#current > a').click(function (index) {
            var companycode = $(this).text();
            $.post('@Url.Action("schedule")',
                { code: companycode }, function (data) {
                    $("#target").html(data);                    
                });
        });
    });

</script>

<div id="target" >

</div>