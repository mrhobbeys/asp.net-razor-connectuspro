@section InlineScript {
     <script type="text/javascript">
         $('document').ready(function () {
             SiteBlue.renderMenu(true);
             $(SiteBlue).bind("FranchiseChanged", function (e, data) { doOnDataLoad(); });

             doOnDataLoad();
         });

         function doOnDataLoad() {
             mygrid = new dhtmlXGridObject('gridbox');
             mygrid.setImagePath("../../../../codebase/imgs/");
             mygrid.setHeader("Booked,Call Back,Cancelled Call,Corporate Transfer,Hand Up,Not Booked,Owner ,Prank Call,Sales Call,Tech Call,Test,Transfer, Total");
             mygrid.setInitWidths("80,80,120,80,80,80,80,80,80,80,80,80,80");
             mygrid.setColAlign("center,center,center,center,center,center,center,center,center,center,center,center,center");
             mygrid.setColTypes("ed,ed,ed,ed,ed,ed,ed,ed,ed,ed,ed,ed,ed");
             mygrid.setColSorting("txt,txt,txt,txt,txt,txt,txt,txt,txt,txt,txt,txt,txt");
             mygrid.init();

             mygrid.setSkin("dhx_skyblue");
             mygrid.setDateFormat("%Y-%m-%d %H:%i");

             mygrid.loadXML("../../../../common/Xgriddata.xml");
             myCalendar = new dhtmlXCalendarObject(["calendarfirst", "CalendarSecond", "calendar3"]);
             myCalendar.setWeekStartDay(7);
             myCalendar.setDateFormat("%m/%d/%Y");

         }
         
       </script>
    


}
