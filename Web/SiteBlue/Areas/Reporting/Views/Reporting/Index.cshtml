        //Add Calender control to startdate and enddate
        function BindCalendar() {
            var myCalendar = new dhtmlXCalendarObject(["txtStartDate", "txtEndDate"]);
            myCalendar.setWeekStartDay(7);
            myCalendar.setDateFormat("%m/%d/%Y");
        }       
