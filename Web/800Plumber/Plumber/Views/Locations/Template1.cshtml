@model Plumber.Models.Location
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td align="left" valign="top">
            <div>
                <div class="maincontent">
                    <div class="leftContent" style="float:left; width:700px">
                        <table width="100%" border="0">
                            <tr>
                                <td align="center" valign="top" style="width: 50%">
                                    @if (Model.LocationImages.Count > 0)
                                    {
                                        <img src="@Url.Content(Model.LocationImages[0].ImageUrl)" alt="@Model.LocationImages[0].ImageUrl" />
                                    }
                                </td>
                                <td align="left" valign="top" style="width: 50%">
                                    <span class="blue-title">@Html.Raw(Model.Title) </span>
                                    <br />
                                    <span class="greytitle">Local Phone Number: </span>
                                    <br />
                                    <a class="greytitle"><strong>@Html.Raw(Model.LocalPhoneNumber)</strong></a>
                                    <div class="memebership">
                                        <span class="blue-title">Territory:</span><br />
                                        @Html.Raw(Model.LocationName), @Html.Raw(Model.State)
                                        <p>
                                            <span class="blue-title">Cities Served:</span><br />
                                            @foreach (var item in Model.Cities)
                                            {
                                                @item.City<text>, </text>
                                            }
                                        </p>
                                        <span class="blue-title">Address:</span><br />
                                        @Html.Raw(Model.Address)<br />
                                        @Html.Raw(Model.City), @Html.Raw(Model.State) @Html.Raw(Model.ZipCode)
                                        @if ((Model.LicenseInformation != null) && (Model.LicenseInformation != "")){
                                            <div style="font-size:8pt;padding-top:5px">
                                            <span class="blue-title" style="font-size:8pt">License Information:</span><br />
                                                @Html.Raw(Model.LicenseInformation)</div>
                                        }
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td align="left" valign="top" colspan="2">
                                    <div class="membershipcontent" style="font-size: 14pt">
                                        @Html.Raw(Model.Description)
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td valign="top">
                                    <div class="rowtitle">
                                        Special Services Offered:
                                    </div>
                                    @Html.Partial("List", Model.LocationServices.OrderBy(ls => ls.Service.ServiceName).ToList())
                                </td>
                                <td align="center" valign="top" style="padding-top: 40px; padding-right: 5px">
                                    @if (Model.LocationImages.Count > 1)
                                    {
                                        <img src="@Url.Content(Model.LocationImages[1].ImageUrl)" alt="@Model.LocationImages[1].ImageUrl" />
                                    }
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="rightContent" style="float:left; width: 290px">
                        <table width="100%" border="0" cellpadding="6" cellspacing="0">
                            @foreach (var coupon in Model.LocationCoupons.Take(3).ToList())
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Content("~/Special/Offer/" + coupon.Offer.OfferId)">
                                            <img src="@Url.Content(coupon.Offer.ImageUrl != null ? coupon.Offer.ImageUrl : "~/Content/images/noimage.jpg")" alt="coupon" width="270" border="0" />
                                        </a>
                                    </td>
                                </tr>
                            }
                        </table>
                        @*<span class="greytitle">Service Feedback</span><br />*@
                        @*<a class="greytitle"></a>*@
                        <div class="memebership">
                            <p>
                                See more reviews and leave feedback at any of the following sites:</p>
                        </div>
                        <div class="memebership">
                            <table width="100%" border="0" cellpadding="5" cellspacing="0">
                                <tr>
                                    <td align="center" valign="middle">
                                        <a href="@Model.GoogleLink" target="_blank">
                                            <img src="@Url.Content("~/Content/images/google.gif")" alt="google" width="76" />@* height="44" />*@
                                        </a>
                                    </td>
                                    <td align="center" valign="middle">
                                        <img src="@Url.Content("~/Content/images/sep.gif")" alt="sep" width="3" height="30" border="0" />
                                    </td>
                                    <td align="center" valign="middle">
                                        @*<img src="@Url.Content("~/Content/images/yahoo.gif")" alt="yahoo" width="142" height="64" />*@
                                        <a href="@Url.Content(Model.FacebookLink != null && Model.FacebookLink != "" ? Model.FacebookLink : "#")" target="_blank">
                                            <img src="@Url.Content("~/Content/images/facebook-icon.png")" alt="facebook" width="76" />
                                        </a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="memebership">
                            <p>
                                @*If you have any other questions please contact us. We would be pleased to help you and
                                answer any questions you have.*@Send us your questions or comments by using the form below.</p>
                        </div>
                        <table width="100%" border="0" align="center" cellpadding="2" cellspacing="0" class="form"
                            style="margin: auto;" cellpading="0">
                            <tr class="required">
                                <td width="69%" height="30" align="left" valign="middle">
                                    <input class="specialtfield" type="text" id="uiName" name="uiName" value="" />
                                </td>
                            </tr>
                            <tr class="required">
                                <td height="30" align="left" valign="middle">
                                    <input class="specialtfield" type="text" id="uiEmail" name="uiEmail" value="" />
                                </td>
                            </tr>
                            <tr class="required">
                                <td align="left" valign="middle">
                                    <textarea name="heard" class="specialtarea" id="uiComment" rows="5"></textarea>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding-right: 10px;" align="right" valign="middle">
                                    <label>
                                        <input type="submit" name="SubmitServiceFeedback" id="SubmitServiceFeedback" value="Submit" />
                                    </label>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </div>
        </td>
        <td width="10" align="left" valign="top">
            &nbsp;
        </td>
    </tr>
</table>
