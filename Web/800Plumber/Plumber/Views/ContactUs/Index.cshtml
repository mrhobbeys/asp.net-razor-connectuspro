    ViewBag.Title = "Index";
}
@section Meta{
    <title>Contact US - 1800-PLUMBER</title>
    <meta name="description" content="If you have any query, you can contact to me by calling at 1-800-758-6237 or by mail at customerservice@1800plumber.com" />
    <meta name="keywords" content="Contact US" />
}
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td align="left" valign="top">
            <div class="rowtitle">
                Contact Us
            </div>
            <div class="shadeinnerpage">
                <div class="contact">
                    <p>
                        Request Service Online<br />
                        @Html.ActionLink("Click Here to Request Service", "Schedule", "Services", null, new { @class = "emaillink" })</p>
                    <p>
                        Customer Service<br />
                        <a href="mailto:customerservice@1800plumber.com" class="emaillink">customerservice@1800plumber.com</a></p>
                    <p>
                        Franchising Opportunities<br />
                        <a href="mailto:franchiseinfo@1800plumber.com" class="emaillink">franchiseinfo@1800plumber.com</a></p>
                </div>
                <div class="contact">
                    <p>
                        Press and Media Inquiries<br />
                        <a href="mailto:marketing@1800plumber.com" class="emaillink">marketing@1800plumber.com</a></p>
                    <p>
                        Career Opportunities<br />
                        <a href="mailto:careers@1800plumber.com" class="emaillink">careers@1800plumber.com</a></p>
                </div>
            </div>
        </td>
        <td width="10" align="left" valign="top">
            &nbsp;
        </td>
        <td width="260" align="right" valign="top">
            <div class="col-right">
                @Html.Partial("NearestLocation")
            </div>
        </td>
    </tr>
</table>
@section HeaderImage{
    <div class="aboutus">
        <img src="@Url.Content("~/Content/images/contact.jpg")" alt="Services" width="1004" height="187" /></div>
}
@section Navigation{
    <div class="navigation">
        <div class="menu bubplastic horizontal orange">
            <ul>
