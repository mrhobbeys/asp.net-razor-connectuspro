@section HeaderImage{
    <div class="aboutus">
        <img src="@Url.Content("~/Content/images/services-banner.jpg")" alt="Services" width="1004" height="187" /></div>
}
@section HeadDeclaration{
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/menu_style.css")" />
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/calender.css")" />
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/exp_css.css")" />
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/jquery-ui.css")" />
    <script src="@Url.Content("~/Scripts/jquery.ui.core.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.maskedinput-1.3.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/dhtmlx/dhtmlxcalendar.js")" type="text/javascript"></script>
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/dhtmlx/calendar/dhtmlxcalendar.css")" />
    <link rel="stylesheet" media="all" type="text/css" href="@Url.Content("~/Content/dhtmlx/calendar/skins/dhtmlxcalendar_dhx_skyblue.css")" />
}

<script type="text/javascript">


    $(document).ready(function () {
        $(function ($) {
            // apply masks
            $("#PreferredDate").mask("99/99/9999");
            $("#PostalCode").mask("99999");
            $("#Phone").mask("999-999-9999");
        });
        $('#PreferredDate').datepicker({ showOn: "focus", changeYear: true, yearRange: '-100:+0' });
        $('#PreferredDate').val("@DateTime.Now.ToShortDateString()");
        myCalendar = new dhtmlXCalendarObject("calendar");
        myCalendar.setWeekStartDay(7);
        myCalendar.show();
    });

</script>