@model Plumber.Models.Appointment
@{
    ViewBag.Title = "Schedule";
}
@section Meta{
    <title>Schedule an Appointment with 1-800-PLUMBER</title>
    <meta name="description" content="Schedule an appointment with 1-800-PLUMBER" />
    <meta name="keywords" content="Appointment with 1-800-PLUMBER" />
}
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td align="left" valign="top">
            <div class="rowtitle">
                SCHEDULE AN APPOINTMENT
            </div>
            <div class="shade-common">
                <div class="maincontent">
                    <p>
                        To request a service call, please fill out the form below and we will contact you
                        as soon as we can to schedule an appointment. You may also schedule an appointment
                        by calling us at <span class="bluelinks">1-800-758-6237</span></p>
                </div>
                <div class="maincontent">
                    <table width="100%" border="0" cellpadding="15" cellspacing="0">
                        <tr>
                            <td align="left" valign="top">
                                &nbsp;
                            </td>
                            <td align="center" valign="top">
                                &nbsp;
                            </td>
                        </tr>
                        <tr>
                            <td width="480" align="left" valign="top">
                                <table width="80%" border="0" align="center" cellpadding="0" cellspacing="0" class="form"
                                    style="margin: auto;" cellpading="0">
                                    @using (Html.BeginForm())
                                    {
                                    <tr class="required">
                                        <th width="31%" height="30" align="left" valign="middle" class="forminfo">
                                            <label for="ZipCode">ZIP OR POSTAL</label>&nbsp;*
                                        </th>
                                        <td width="69%" height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.PostalCode, new { @class = "formtext" })
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiName">
                                                Name</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.Name, new { @class = "formtext" })
                                        </td>
                                    </tr>
                                        <!-- -->
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiName">
                                                Address</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextAreaFor(model => model.Address, new { @class = "formtextarea" })
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiName">
                                                City</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.City, new { @class = "formtext" })
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiName">
                                                State</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.DropDownListFor(model => model.State, new SelectList(ViewBag.States, "ID", "Name"), new { @class = "formtext" })
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiEmail">Email</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.Email, new { @class = "formtext" })
                                            @Html.ValidationMessageFor(model => model.Email)
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiPhone">Phone</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.Phone, new { @class = "formtext" })
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiPreferredMonth">Preferred Date</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            @Html.TextBoxFor(model => model.PreferredDate, new { @class = "formtext" })
                                            @*<input type="date" id="uiPreferredDate" name="uiPreferredDate" class="forminfo" />*@
                                            @*<select id="uiPreferredMonth" name="uiPreferradMonth">
                                                <option >Nov</option>
                                                <option>Dec</option>
                                            </select>
                                            <select id="uiPreferredDay" name="uiPreferredDay">
                                                <option >17</option>
                                                <option>18</option>
                                            </select>
                                            <select id="uiPreferredYear" name="uiPreferredYear">
                                                <option >2011</option>
                                                <option>2012</option>
                                            </select>
                                            <a href="#">
                                                <img src="@Url.Content("~/Content/images/cal-icon.png")" alt="cal" width="16" height="14" border="0" /></a>*@
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiPreferredTime">
                                                Preferred Time:</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            <select id="PreferredTime" name="PreferredTime" class="formtext">
                                                <option>Early morning</option>
                                                <option>Late Morning</option>
                                                <option>Early Afternoon</option>
                                                <option>Late Afternoon</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th height="30" align="left" valign="middle" class="forminfo">
                                            <label for="uiTypeOfService">
                                                Type of Service:</label>
                                        </th>
                                        <td height="30" align="left" valign="middle">
                                            <select id="TypeOfService" name="TypeOfService" class="formtext">
                                                @*<option>General</option>*@
                                                <option>Plumbing</option>
                                                <option>Cooling</option>
                                                <option>Heating</option>
                                                <option>Electrical</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr class="required">
                                        <th align="left" valign="middle" class="forminfo">
                                            <label for="uiComment">Comment:</label>
                                        </th>
                                        <td align="left" valign="middle">
                                            @Html.TextAreaFor(model => model.Comment, new { @class = "formtextarea" })
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="left" valign="middle" class="forminfo">
                                        </td>
                                        <td height="30" align="left" valign="middle">
                                            <input class="btn_primary" name="submit" type="submit" value="Submit" />
                                        </td>
                                    </tr>
                                    }
                                </table>
                            </td>
                            <td align="center" valign="top">
                                <div id="calendar" style="position:relative;height:250px;width:200px">
                                </div>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </td>
        <td width="10" align="left" valign="top">
            &nbsp;
        </td>
    </tr>
</table>



