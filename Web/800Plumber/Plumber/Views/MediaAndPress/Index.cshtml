@model List<Plumber.Models.Media>
@{
    ViewBag.Title = "Index";
}
@section Meta{
    <title>Heating Air Conditioning, Emergency Plumbing Repair Service, Drain Cleaning</title>
    <meta name="description" content="1-800-PLUMBER offers 24 hour emergency plumbing services, electrical repair, drain cleaning and heating air conditioning repairing service in United States and Canada." />
    <meta name="keywords" content="plumbing services,heating air conditioning,emergency plumbing service,plumbing repair,drain cleaning,24 hour plumbing service,electrical repair" />
}
<table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr>
        <td align="left" valign="top">
            <div class="rowtitle">
                MEDIA & PRESS
            </div>
            <div class="shadeinnerpage">
                <div class="maincontent">
                    @foreach (var item in Model)
                    {
                        <div class="maincontent">
                        <p>
                            <h2 class="blue-title">
                                @Html.Raw(item.Title)
                            </h2>
                            @Html.Raw(item.SubTitle)
                        </p>
                        <p class="maincontent">
                            @if (item.MediaType.HasValue)
                            {
                                if (item.MediaType.Value == 1)
                                {
                                    <strong>Audio file</strong><br />
                                    <audio controls="controls">
                                      <source src="@Url.Content(item.MediaPath)" type="@( "audio/" + item.MediaExtension.MediaExtensionName)" />
                                      Your browser does not support the audio element, <a href="@Url.Content(item.MediaPath)">play it in an external player.</a>
                                    </audio>
                                }
                                else if (item.MediaType.Value == 2)
                                {
                                    <strong>Video file</strong><br />
                                    <video width="320" height="240" controls="controls">
                                      <source src="@Url.Content(item.MediaPath)" type="@( "video/" + item.MediaExtension.MediaExtensionName)" />
                                      Your browser does not support the video tag, <a href="@Url.Content(item.MediaPath)">play it in an external player.</a>
                                    </video>
                                }
                            }
                            @Html.Raw(item.Content)
                        </p>
                    </div>
                    <hr />
                    }
                </div>
            </div>
        </td>
        <td width="10" align="left" valign="top">
            &nbsp;
        </td>
        <td width="260" align="right" valign="top">
            <div class="col-right">
                @Html.Partial("NearestLocation")
            </div>
        </td>
    </tr>
</table>
@section HeaderImage{
    <div class="aboutus">
        <img src="@Url.Content("~/Content/images/services-banner.jpg")" alt="Services" width="1004" height="187" /></div>
}
@section Navigation{
    <div class="navigation">
        <div class="menu bubplastic horizontal orange">
            <ul>
                <li><span class="menu_r"><a href="@Url.Content("~/")" title="1-800-PLUMBER"><span class="menu_ar">home</span></a></span></li>
                <li><span class="menu_r"><a href="@Url.Content("~/Locations")" title="Plumbing Services Locations"><span class="menu_ar">
                    Locations</span></a></span></li>
                <li><span class="menu_r"><a href="@Url.Content("~/Services")" title="Plumbing and Drain CleaningServices"><span class="menu_ar">
                    Services</span></a></span></li>
                <li><span class="menu_r"><a href="@Url.Content("~/AboutUs")" title=" About 1-800-PLUMBER"><span class="menu_ar">About
                    us </span></a></span></li>
                <li><span class="menu_r"><a href="@Url.Content("~/TerritoryOwners")"><span class="menu_ar">
                    Territory Owners</span></a></span></li>
                <li><span class="menu_r"><a href="@Url.Content("~/ContactUs")" title="Contact for Plumbing and Heating air conditioning"><span class="menu_ar">
                    Contact Us</span></a></span></li>
                @if(Request.IsAuthenticated) {
                    <li><span class="menu_r"><a href="@Url.Content("~/LandingPage/Dashboard")" title="1-800-PLUMBER Dashboard"><span class="menu_ar">
                        Dashboard</span></a></span></li>
                    <li><span class="menu_r"><a href="@Url.Content("~/SGAccount/LogOff")"><span class="menu_ar">Log Off </span></a></span></li>
                }
                else
                {
                 <li><span class="menu_r"><a href="@Url.Content("~/SGAccount/LogOn")"><span class="menu_ar">Log On </span></a></span></li>
                }
            </ul>
            <br class="clearit" />
        </div>
    </div>
}
