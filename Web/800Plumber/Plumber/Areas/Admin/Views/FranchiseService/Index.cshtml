@model IEnumerable<Plumber.Models.FranchiseService>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>List services for @ViewBag.SelectedFranchise</h2>

@*<p>
    @Html.ActionLink("Add a new service", "Create", new { id = ViewBag.FranchiseID })
</p>*@
<table class="data-table" id="franchiseServicesTable">
    <thead>
    <tr>
        <th>
            Service
        </th>
        @*<th></th>*@
    </tr>
    </thead>
    <tbody>
    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
    <tr>
        <td style="width:100%">
            @Html.DisplayFor(modelItem => item.ServiceCategory.ServiceName)
        </td>
        @*<td style="text-align:center">
            @Html.ActionLink("Delete", "Delete", new { id=item.FranchiseeServiceID })
        </td>*@
    </tr>
        }
    }
    else
    {
        <tr>
            <td style="width:100%">
                <img src="../../../../Content/admin_icons/warning.png" alt="" title="No service found for the selected franchise" /><br />
                <strong>No Service found for the selected Franchise!</strong>
            </td>
        </tr>
    }
    </tbody>
    <tfoot>
        <tr id="pager">
            <td>
                <img src="@Url.Content("~/Content/_assets/img/first.png")" alt="" class="first"/>
                <img src="@Url.Content("~/Content/_assets/img/prev.png")" alt="" class="prev"/>
                <input class="pagedisplay" type="text" />
                <img src="@Url.Content("~/Content/_assets/img/next.png")" alt="" class="next"/>
                <img src="@Url.Content("~/Content/_assets/img/last.png")" alt="" class="last"/>
                <select class="pagesize">
                    <option selected="selected" value="10">10</option>
                    <option value="20">20</option>
                    <option value="30">30</option>
                    <option value="40">40</option>
                </select>
            </td>
        </tr>
    </tfoot>
</table>
<script type="text/javascript">
    $(document).ready(function () {
        $("#franchiseServicesTable")
        .tablesorter({ widgets: ['zebra'] })
        .tablesorterPager({ container: $("#pager"), positionFixed: false })
    });
</script>
@section Scripts{
    <link href="@Url.Content("~/Content/_assets/themes/yui/style.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter-2.0.3.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter.filer.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/_assets/js/jquery.tablesorter.pager.js")" type="text/javascript"></script>
}
