@model Plumber.Models.FranchiseService
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>
    Confirm delete</h2>
<h3>
    Are you sure you want to delete the service @Model.ServiceCategory.ServiceName for
    the franchise @Model.Franchise.FranchiseNumber?</h3>
@using (Html.BeginForm())
{
    <p>
        <input type="submit" value="Delete" />
        |
        @Html.ActionLink("Back to List", "Index", new { id = Model.FranchiseID })
    </p>
}
