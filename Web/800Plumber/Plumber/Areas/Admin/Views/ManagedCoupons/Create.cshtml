@model Plumber.Models.LocationCoupon
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>
    Add a new coupon</h2>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@if (ViewBag.OffersCount != 0)
{
    using (Html.BeginForm())
    {
    @Html.ValidationSummary(true)
    <fieldset>
        <div class="editor-label">
            @Html.LabelFor(model => model.OfferId, "Coupon")
        </div>
        <div class="editor-field">
            @Html.DropDownList("OfferId", String.Empty)
            @Html.ValidationMessageFor(model => model.OfferId)
        </div>
        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
    }
}
else
{
    <fieldset>
        <h2>You cannot add coupons to this location anymore!</h2>
    </fieldset>
}
<p>
    @Html.ActionLink("Back to List", "Index", new { id = ViewBag.LocationId })
</p>
